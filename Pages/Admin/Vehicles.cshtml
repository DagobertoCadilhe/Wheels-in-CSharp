@page
@model Wheels_in_Csharp.Pages.Admin.VehiclesModel
@{
    ViewData["Title"] = "Gerenciamento de Veículos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-car-front"></i> @ViewData["Title"]</h2>
        <a asp-page="CreateVehicle" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Adicionar Veículo
        </a>
    </div>

    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Modelo</label>
                    <input type="text" class="form-control" asp-for="ModelFilter" placeholder="Filtrar por modelo">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Tipo</label>
                    <select class="form-select" asp-for="TypeFilter">
                        <option value="">Todos</option>
                        <option value="Car">Carros</option>
                        <option value="Motorcycle">Motos</option>
                        <option value="Bicycle">Bicicletas</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Status</label>
                    <select class="form-select" asp-for="StatusFilter">
                        <option value="">Todos</option>
                        <option value="AVAILABLE">Disponível</option>
                        <option value="RENTED">Alugado</option>
                        <option value="MAINTENANCE">Manutenção</option>
                        <option value="DAMAGED">Danificado</option>
                        <option value="RETIRED">Aposentado</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-funnel"></i> Filtrar
                    </button>
                    <a asp-page="./Vehicles" class="btn btn-secondary">
                        <i class="bi bi-arrow-counterclockwise"></i> Limpar
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista de Veículos -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Modelo</th>
                            <th>Tipo</th>
                            <th>Placa</th>
                            <th>Status</th>
                            <th>Valor/Hora</th>
                            <th>Última Manutenção</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vehicle in Model.Vehicles)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@vehicle.ImagemUri" class="rounded me-2" width="50" height="30" style="object-fit: cover;">
                                        <div>
                                            <strong>@vehicle.Model</strong><br>
                                            <small class="text-muted">@vehicle.Year</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@vehicle.GetType().Name</td>
                                <td>@vehicle.LicensePlate</td>
                                <td>
                                    <span class="badge @Model.GetStatusBadgeClass(vehicle.Status)">
                                        @Model.GetStatusDisplayName(vehicle.Status)
                                    </span>
                                </td>
                                <td>R$ @vehicle.HourlyRate.ToString("N2")</td>
                                <td>@vehicle.LastMaintenance.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-page="VehicleDetails" asp-route-id="@vehicle.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-page="EditVehicle" asp-route-id="@vehicle.Id" class="btn btn-outline-secondary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@vehicle.Id"
                                              onsubmit="return confirm('Tem certeza que deseja excluir este veículo?');">
                                            <button type="submit" class="btn btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Paginação -->
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @if (Model.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-route-currentPage="@(Model.CurrentPage - 1)"
                               asp-route-modelFilter="@Model.ModelFilter"
                               asp-route-typeFilter="@Model.TypeFilter"
                               asp-route-statusFilter="@Model.StatusFilter">
                                Anterior
                            </a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-route-currentPage="@i"
                               asp-route-modelFilter="@Model.ModelFilter"
                               asp-route-typeFilter="@Model.TypeFilter"
                               asp-route-statusFilter="@Model.StatusFilter">
                                @i
                            </a>
                        </li>
                    }

                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-route-currentPage="@(Model.CurrentPage + 1)"
                               asp-route-modelFilter="@Model.ModelFilter"
                               asp-route-typeFilter="@Model.TypeFilter"
                               asp-route-statusFilter="@Model.StatusFilter">
                                Próxima
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>